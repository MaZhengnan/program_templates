{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build",
      "generator": "Ninja"
    },
    {
      "name": "clang",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/clang.cmake"
      },
      "condition": {
        "type": "not",
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        }
      }
    },
    {
      "name": "llvm-msvc",
      "displayName": "LLVM+MSVC (Windows)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-msvc.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "llvm-mingw",
      "displayName": "LLVM+MinGW (Windows)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/llvm-mingw.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "mingw",
      "displayName": "Pure MinGW (Cross-Platform)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/mingw.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "clang",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "configurePreset": "clang",
      "configuration": "Release"
    },
    {
      "name": "debug-llvm-msvc",
      "configurePreset": "llvm-msvc",
      "configuration": "Debug"
    },
    {
      "name": "release-llvm-msvc",
      "configurePreset": "llvm-msvc",
      "configuration": "Release"
    },
    {
      "name": "debug-llvm-mingw",
      "configurePreset": "llvm-mingw",
      "configuration": "Debug"
    },
    {
      "name": "release-llvm-mingw",
      "configurePreset": "llvm-mingw",
      "configuration": "Release"
    },
    {
      "name": "debug-mingw",
      "configurePreset": "mingw",
      "configuration": "Debug"
    },
    {
      "name": "release-mingw",
      "configurePreset": "mingw",
      "configuration": "Release"
    }
  ]

}
